{
  "manifest_version": 2,
  "name": "Take A Pause",
  "description": "This Chrome Extension will remind you to take a pause from the computer after 'x' amount of time.",
  "version": "0.0.0.1",
  "browser_action": {
      "default_icon": "icons/alarm_icon.png",
      "default_popup": "/src/popup/popup.html"
  },
  "background": {
      "scripts": ["/src/background/background.js"]
  },
  "permissions": [
       "activeTab",
       "storage",
        "alarms"
   ]
}
